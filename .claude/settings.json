{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path // .tool_input.filePath' | xargs bunx biome check --write --unsafe 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(bun run build:*)",
      "Bash(cargo check:*)",
      "Bash(grep:*)",
      "Bash(ps:*)",
      "Bash(bunx biome check:*)",
      "Bash(bun run check:*)",
      "Bash(ls:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs"
    ]
  }
}